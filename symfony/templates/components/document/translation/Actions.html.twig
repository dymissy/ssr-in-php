{% set confirmDisabled = translation.status == 'Confirmed' %}
{% set downloadDisabled = translation.status != 'Confirmed' %}

<div {{ attributes }}>
    <button
            class="text-sm font-bold px-5 py-2 rounded-xl border cursor-pointer
         bg-blue-100 text-blue-600 hover:border-blue-700
         disabled:bg-gray-200 disabled:text-gray-400 disabled:border-gray-300 disabled:cursor-not-allowed"
            {% if confirmDisabled %}disabled{% endif %}
            data-action="live#emitUp"
            data-live-event-param="translationConfirmed"
    >
        Confirm
    </button>
    <twig:Document:Translation:DownloadButton :disabled="downloadDisabled" />
</div>